<?xml version = "1.0" encoding = "UTF-8" ?>
<messages>
    <message id="loading-indicator">
        <div class="loading-overlay"></div>
        <div class="loading-indicator">
            <div>
                <img src="resources/images/loading.gif"
                    alt="loading animation" />
            </div>
            <span>Loading...</span>
        </div>
    </message>
    <message id="navbar">
        <nav class="navbar">
            <span class="navbar-item navbar-item-active" 
                id="navbar-item-home">
                ${a-home}
            </span>
            <span class="navbar-item" id="navbar-item-menu">
                ${a-menu}
            </span>
            <span class="navbar-item" id="navbar-item-orders">
                ${a-orders}
            </span>
            <span class="navbar-item" id="navbar-item-sales">
                ${a-sales}
            </span> 
            <span class="navbar-item" id="navbar-item-inventory">
                ${a-inventory}
            </span>
           <span class="navbar-spacer"></span>
            <span class="navbar-item" id="navbar-item-login">
                ${a-login}
            </span>
            <span class="navbar-item" id="navbar-item-cart">
                ${a-cart}
            </span>
        </nav>
    </message>
    <message id="menu-item">
        <div class="list-item">
                <div class="list-item-header">
                    <span class="colour-cyan">${name}</span>
                    ${cart-button}
                </div>
                <div class="menu-description">
                    <span>${description}</span>
                    <span>${price}</span>
                </div>
        </div>
    </message>
    <message id="order-list-item">
        <div class="list-item">
            <div class="list-item-header">
                <span class="colour-cyan">Order #${txt-ordernum}</span>
                ${btn-complete}
            </div>
            <div class="flex-row">
                <span class="flex">${txt-orderedby}</span>
                <span>${txt-orderdate}</span>
            </div>
            <div class="panel-wrapper">
                ${panel-orderdetails}
            </div>
        </div>
    </message>
    <message id="order-list-empty">
        <div class="list-item">
            <span>There are no orders.</span>
        </div>
    </message>
    <message id="sales-chart">
        <div>
            <div class="list-item">
                <div class="list-item-header">
                    <span>Total Sales Over Time</span>
                    ${btn-group-rev-qty}
                    ${btn-menu-item}
                </div>
                <div class="flex-row">
                    ${y-axis-title}
                    <div class="flex-column">
                        ${chart}
                        <span class="x-axis-title">Date</span>
                    </div>
                    ${legend}
                </div>
            </div>
        </div>
    </message>
</messages>
