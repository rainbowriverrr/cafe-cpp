<?xml version = "1.0" encoding = "UTF-8" ?>
<messages>
    <message id="navbar">
        <nav class="navbar">
            <span class="navbar-item navbar-item-active" 
                id="navbar-item-home">
                ${a-home}
            </span>
            <span class="navbar-item" id="navbar-item-menu">
                ${a-menu}
            </span>
            <span class="navbar-item" id="navbar-item-orders">
                ${a-orders}
            </span>
            <span class="navbar-item" id="navbar-item-inventory">
                ${a-inventory}
            </span>
            <span class="navbar-spacer"></span>
            <span class="navbar-item" id="navbar-item-login">
                ${a-login}
            </span>
            <span class="navbar-item" id="navbar-item-cart">
                ${a-cart}
            </span>
        </nav>
    </message>
    <message id="menu-item">
        <div class="list-item">
                <div class="list-item-header">
                    <span class="colour-cyan">${name}</span>
                    ${cart-button}
                </div>
                <div class="list-description">
                    <span>${price}</span>
                    <span>${description}</span>
                </div>
        </div>
    </message>
    <message id="cart-item">
        <div class="list-item">
            <div class="list-item-header">
                <span class="colour-cyan">${name}</span>
                ${remove-button}
            </div>
            <div class="list-description">
                <span>${price}</span>
                <span>Amnt: ${quantity}</span>
            </div>
            <div class="list-description">
                <span>${total}</span>
                <div class="cart-button-row">
                    ${add-button}
                    ${subtract-button}
                </div>
            </div>
        </div>
    </message>
    <message id="cart-total">
        <div class="list-item">
            <div class="list-item-header">
                <span class="colour-cyan">Total</span>
                ${order-button}
            </div>
            <div class="list-description">
                <span>${total}</span>
            </div>
        </div>
    </message>
    <message id="order-list-item">
        <div class="list-item">
            <div class="list-item-header">
                <span class="colour-cyan">Order #${txt-ordernum}</span>
                ${btn-complete}
            </div>
            <div class="flex-row">
                <span class="flex">${txt-orderedby}</span>
                <span>${txt-orderdate}</span>
            </div>
            <div class="panel-wrapper">
                ${panel-orderdetails}
            </div>
        </div>
    </message>
    <message id="order-list-empty">
        <div class="list-item">
            <span>There are no orders.</span>
        </div>
    </message>
</messages>
