<?xml version = "1.0" encoding = "UTF-8" ?>
<messages>
    <message id="navbar">
        <div class="navbar">
            <span class="navbar-item navbar-item-home">${a-home}</span>
            <span class="navbar-item">${a-menu}</span>
            <span class="navbar-item">${a-orders}</span>
            <span class="navbar-item">${a-inventory}</span>
            <span class="navbar-spacer"></span>
            <span class="navbar-item">${a-login}</span>
            <span class="navbar-item navbar-item-cart">${a-cart}</span>
        </div>
    </message>
    <message id="menu-item">
        <div class="list-item">
                <div class="list-item-header">
                    <span class="colour-cyan">${name}</span>
                    ${cart-button}
                </div>
                <div class="menu-description">
                    <span>${description}</span>
                    <span>${price}</span>
                </div>
        </div>
    </message>
    <message id="order-list-item">
        <div class="list-item">
            <div class="list-item-header">
                <span class="colour-cyan">Order #${txt-ordernum}</span>
                ${btn-complete}
            </div>
            <div class="flex-row">
                <span class="flex">${txt-orderedby}</span>
                <span>${txt-orderdate}</span>
            </div>
            <div class="panel-wrapper">
                ${panel-orderdetails}
            </div>
        </div>
    </message>
    <message id="order-list-empty">
        <div class="list-item">
            <span>There are no orders.</span>
        </div>
    </message>
</messages>
